<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure class="logo">
        <a href="/"><img src="/img/logo-DH.png" alt="Logo Digital House"></a>
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <div>
                <label for="title">Title </label>
                <p><input type="text" name="title" id="title" required></p>
            </div>
            <div>  
                <label for="rating">Rating </label>
                <p><input type="number" name="rating" id="rating" required></p>                
            </div>
            <div>
                <label for="awards">Awards </label>
                <p><input type="number" name="awards" id="awards" required></p>                
            </div>
            <div>
                <label for="release_date">Release date </label>
                <p><input type="date" name="release_date" id="release_date" required></p>                
            </div>
            <div>
                <label for="length">Length </label>
                <p><input type="number" name="length" id="length" required></p>
            </div>

            <div>
                <label for="genre">Genero </label>
                <p>
                    <select name="genre" id="genre" required>
                
                        <% genres.forEach(genre => { %>
                            <option value="<%= genre.name %>"><%= genre.name %></option>
                        <% }) %> 
                    </select>      
                </p>          
            </div>
            <div>
                <button class="botonAgregar" type="submit">Agregar</button>
            </div>
            <div>
                <a class="botonVolver" href="/movies"><button>Volver al Listado de Películas</button></a>
            </div>
        </form>
    </section>
    
</body>

</html>